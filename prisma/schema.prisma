generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       String  @id @default(cuid())
  name     String?
  email    String? @unique
  password String

  workouts Workout[]
}

model Workout {
  id        String   @id @default(cuid())
  userEmail String
  content   String
  createdAt DateTime @default(now())

  user User @relation(fields: [userEmail], references: [email], onDelete: Cascade)

  @@unique([id])
  @@index([userEmail])
}
